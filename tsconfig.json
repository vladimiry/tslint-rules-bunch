{
  // https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "commonjs",
    "importHelpers": true,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true,
    "listEmittedFiles": true,
    "lib": [
      "es2015"
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  }
}
