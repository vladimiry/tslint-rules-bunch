{
  "extends": [
    "./tslint.json"
  ],
  "rulesDirectory": [
    "./dist/rules"
  ],
  "rules": {
    "no-import-zones": [
      true,
      {
        "basePath": "src",
        "zones": [
          {
            "patterns": [
              {
                "target": "test/**/*",
                "forbidden": "lib/**/*"
              }
            ]
          }
        ]
      }
    ]
  }
}
